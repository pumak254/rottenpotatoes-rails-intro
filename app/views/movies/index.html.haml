-#  This file is app/views/movies/index.html.haml
%h1 All Movies

#ratings_form
  = form_tag movies_path, :method => :get do
    Include:
    - @all_ratings.each do |rating|
      = rating
      %span{id:"ratings_#{rating}"}=check_box_tag "ratings[#{rating}]", 1, true
    %span{id:"ratings_submit"}=submit_tag 'Refresh'

%table#movies
  %thead
    %tr
      %th{@t_hilite ? {class:"hilite"} : {}}=link_to 'Movie Title', 
        movies_path(:sort_by => :title_header)
      %th Rating
      %th{@r_hilite ? {class:"hilite"} : {}}=link_to 'Release Date', 
        movies_path(:sort_by => :release_date_header)
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
